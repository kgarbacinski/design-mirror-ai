{
  "manifest_version": 3,
  "name": "DesignMirror",
  "version": "1.0.0",
  "description": "Extract design systems from websites and generate AI-ready prompts with CSS/HTML snippets",

  "permissions": [
    "activeTab",
    "storage",
    "clipboardWrite",
    "scripting"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content-script.js"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/icon.svg"
  },

  "icons": {
    "16": "icons/icon.svg",
    "32": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  }
}
